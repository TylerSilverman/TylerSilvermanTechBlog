    <h3 class="font-weight-bold">Tyler Silverman</h3>
  </header>
  
  <nav>
    <a href="/">Home</a>
    <!-- If the user is logged in, show a logout button -->
    {{#if loggedIn}}
    <button id="logout" class="btn-no-style">Logout</button>
    {{else}}
    <!-- Otherwise, show a link to login -->
    <a href="/login" class="btn btn-link">Log In</a>
    <a href="/subscribe" class="btn btn-link">Register</a>
    <a href="/" class="btn btn-link">Log Out</a>
    {{/if}}
  <div class="dashboard-container">
    {{{body}}}
  </div>
  <!-- If the user is logged in, load the JS script for when they logout -->
  {{#if loggedIn}}
  <script src="/js/logout.js"></script>
  {{/if}}
  </div>
  </nav>




