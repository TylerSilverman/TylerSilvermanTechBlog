<div class="row" style="background-color: rgb(179, 179, 179);">
  <div class="col-md-6">
    <h2>Log In</h2>

    <form class="form login-form">
      <div class="form-group">
        <label for="email-login" style="width: 5rem;">Email:</label>
        <input class="form-input" type="text" id="email-login" />
      </div>
      <div class="form-group">
        <label for="password-login" style="width: 5rem;">Password:</label>
        <input class="form-input" type="password" id="password-login" />
      </div>
      <br>
      <br>
      <div class="form-group">
        <button class="btn btn-primary" type="submit" href="/dashboard">Log In</button>
      </div>
    </form>
  </div>
  <div class="col-md-6">
    <h2>Sign Up</h2>

    <form class="form login-form">
      <div class="form-group">
        <label for="name-signup" style="width: 5rem;">name:</label>
        <input class="form-input" type="text" id="name-signup" />
      </div>
      <div class="form-group">
        <label for="email-signup" style="width: 5rem;">email:</label>
        <input class="form-input" type="text" id="email-signup" />
      </div>
      <div class="form-group">
        <label for="password-signup" style="width: 5rem;">password:</label>
        <input class="form-input" type="password" id="password-signup" />
      </div>
      <br>
      <div class="form-group">
        <button class="btn btn-primary" name="signupID" type="submit" href="/dashboard">Sign Up</button>
      </div>
      <br>
    </form>
  </div>
</div>

<script src="./js/login.js"></script>
