 
<h2>Login</h2>

<form class="form login-form" action="/login" method="POST">
  <div class="form-group">
    <label for="email-login">Email:</label>
    <input class="form-input" name="email" type="text" id="email-login" />
  </div>
  <div class="form-group">
    <label for="password-login">Password:</label>
    <input class="form-input" name="password" type="password" id="password-login" />
  </div>
  <div class="form-group">
    <button class="btn btn-primary" name="loginID" type="submit">Login</button>
  </div>
</form>

<script src="/js/login.js"></script> 

