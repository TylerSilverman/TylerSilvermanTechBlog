<section class="container">
  <h3 class="dashbboard-email">{{dashboard.username-signup}}</h3>
  <!-- If the user is logged in, render the gallery content -->
  {{#if loggedIn}}
  <section class="flex-row justify-center">
    {{#each dashboard as |dashboard|}}
    {{> dashboard-details}}
    {{/each}}
  </section>
</section>
<!-- Otherwise, provide a link to login -->
{{else}}
<a href="/login">You must login first to view the Dashboard</a>
{{/if}}

<h5>You are at the DashBoard handlebar</h5>